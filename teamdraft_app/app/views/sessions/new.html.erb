<div class="flex flex-col gap-6 p-6 max-w-lg sm:w-full mx-auto border border-light rounded-lg ">
  <h1 class="text-2xl font-bold text-center">Log in</h1>
  <%= form_with(url: login_path, local: true, class: "flex flex-col gap-6") do |f| %>
    <div class="flex flex-col justify-center w-full">
      <%= f.label :email, class: "block text-gray-700 font-medium mb-1" %>
      <%= f.email_field :email, autofocus: true, class: "form-input" %>
    </div>
    <div class="flex flex-col justify-center w-full">
      <%= f.label :password, class: "block text-gray-700 font-medium mb-1" %>
      <%= f.password_field :password, class: "form-input" %>
    </div>
    <div class="flex items-center justify-between">
      <%= f.submit "Log in", class: "btn-primary w-full" %>
    </div>
  <% end %>
</div>