<div class="container max-w-md mx-auto px-6 py-8 border border-gray-300 rounded-lg shadow-md bg-white">
  <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Log in</h1>
  <%= form_with(url: login_path, local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-medium mb-1" %>
      <%= f.email_field :email, autofocus: true, class: "form-input" %>
    </div>
    <div class="mb-6">
      <%= f.label :password, class: "block text-gray-700 font-medium mb-1" %>
      <%= f.password_field :password, class: "form-input" %>
    </div>
    <div class="flex items-center justify-between">
      <%= f.submit "Log in", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
</div>