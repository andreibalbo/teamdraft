<%# Soccer field elements %>
<%# Bottom area %>
<div class="absolute h-1/4 aspect-square bottom-[calc(20%-70px)] left-1/2 -translate-x-1/2 border rounded-full border-light"></div>
<div class="absolute w-3/5 h-1/5 bottom-[-1px] left-1/2 -translate-x-1/2 border border-light bg-white"></div>
<div class="absolute w-1/3 h-1/9 bottom-[-1px] left-1/2 -translate-x-1/2 border border-light"></div>
<%# Top area %>
<div class="absolute h-1/4 aspect-square top-[calc(20%-70px)] left-1/2 -translate-x-1/2 border rounded-full border-light"></div>
<div class="absolute w-3/5 h-1/5 top-[-1px] left-1/2 -translate-x-1/2 border border-light bg-white"></div>
<div class="absolute w-1/3 h-1/9 top-[-1px] left-1/2 -translate-x-1/2 border border-light"></div>
<%# Middle line %>
<div class="absolute w-full h-1/2 top-[1px] border-b border-light"></div>
<%# Center circle %>
<div class="absolute h-1/4 aspect-square top-[50%] left-[50%] -translate-x-1/2 -translate-y-1/2 border rounded-full border-light"></div>
