<h1><%= @group.name %></h1>
<div class="group-details">
  <p>
    <strong>Category:</strong>
    <%= @group.category %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @group.description %>
  </p>
</div>
<div class="matches-section mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Matches</h2>
    <%= link_to 'New Match', new_group_match_path(@group), class: "button" %>
  </div>
  <% if @group.matches.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Players</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @group.matches.order(datetime: :desc).each do |match| %>
          <tr>
            <td><%= match.datetime.strftime("%Y-%m-%d") %></td>
            <td><%= match.datetime.strftime("%H:%M") %></td>
            <td><%= match.participations.count %></td>
            <td>
              <%= link_to 'View', match_path(match), class: "button" %>
              <%= link_to 'Edit', edit_match_path(match), class: "button" %>
              <%= link_to 'Delete', match_path(match),
                  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
                  class: "button" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-muted">No matches scheduled yet.</p>
  <% end %>
</div>
<div class="members-list">
  <h2>Members</h2>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
      </tr>
    </thead>
    <tbody>
      <% @memberships.each do |membership| %>
        <tr>
          <td><%= membership.user.email %></td>
          <td><%= membership.role %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="players-list mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Players</h2>
    <%= link_to 'Add New Player', new_group_player_path(@group), class: "button" %>
  </div>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Position</th>
        <th>Attack</th>
        <th>Defense</th>
        <th>Stamina</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @group.players.each do |player| %>
        <tr>
          <td><%= player.name %></td>
          <td>
            <%= player.positioning %>
            (<%= player.positioning <= 50 ? 'Defensive' : 'Attacking' %>)
          </td>
          <td><%= player.attack %></td>
          <td><%= player.defense %></td>
          <td><%= player.stamina %></td>
          <td>
            <%= link_to 'View', player_path(player), class: "button" %>
            <%= link_to 'Edit', edit_player_path(player), class: "button" %>
            <%= link_to 'Delete', player_path(player), 
                data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, 
                class: "button" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="actions mt-4">
  <%= link_to 'Edit', edit_group_path(@group), class: "button" %> |
  <%= link_to 'Back to Groups', groups_path, class: "button" %>
</div>