<h1><%= @group.name %></h1>
<div class="group-details">
  <p>
    <strong>Category:</strong>
    <%= @group.category %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @group.description %>
  </p>
</div>
<div class="members-list">
  <h2>Members</h2>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
      </tr>
    </thead>
    <tbody>
      <% @memberships.each do |membership| %>
        <tr>
          <td><%= membership.user.email %></td>
          <td><%= membership.role %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="players-list mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Players</h2>
    <%= link_to 'Add New Player', new_group_player_path(@group), class: "button" %>
  </div>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Position</th>
        <th>Attack</th>
        <th>Defense</th>
        <th>Stamina</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @group.players.each do |player| %>
        <tr>
          <td><%= player.name %></td>
          <td>
            <%= player.positioning %>
            (<%= player.positioning <= 50 ? 'Attacking' : 'Defensive' %>)
          </td>
          <td><%= player.attack %></td>
          <td><%= player.defense %></td>
          <td><%= player.stamina %></td>
          <td>
            <%= link_to 'View', player_path(player), class: "button" %>
            <%= link_to 'Edit', edit_player_path(player), class: "button" %>
            <%= link_to 'Delete', player_path(player), 
                method: :delete, 
                data: { confirm: 'Are you sure?' }, 
                class: "button" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="actions mt-4">
  <%= link_to 'Edit', edit_group_path(@group), class: "button" %> |
  <%= link_to 'Back to Groups', groups_path, class: "button" %>
</div>