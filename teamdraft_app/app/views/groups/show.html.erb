<div class="flex flex-col gap-6 w-full">
  <div class="flex flex-row justify-between items-center">
    <span class="section-title"><%= @group.name %></span>
    <div class="actions">
      <%= link_to 'Edit', edit_group_path(@group), class: "btn-secondary" %>
      <%= link_to 'Back', groups_path, class: "btn-secondary" %>
    </div>
  </div>
  <div class="box ">
    <div class="flex flex-row justify-between items-center mb-3">
      <span class="subsection-title">Matches</span>
      <%= link_to 'New Match', new_group_match_path(@group), class: "btn-primary" %>
    </div>
    <% if @group.matches.any? %>
      <table class="table">
        <thead>
          <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Players</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @group.matches.order(datetime: :desc).each do |match| %>
            <tr>
              <td><%= match.datetime.strftime("%Y-%m-%d") %></td>
              <td><%= match.datetime.strftime("%H:%M") %></td>
              <td><%= match.participations.count %></td>
              <td>
                <%= link_to 'View', match_path(match), class: "btn-primary !py-1" %>
                <%= link_to 'Edit', edit_match_path(match), class: "btn-secondary !py-1" %>
                <%= link_to 'Delete', match_path(match),
                  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
                  class: "btn-danger !py-1" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-muted">No matches scheduled yet.</p>
    <% end %>
  </div>
  <div class="members-list box">
    <span class="subsection-title">Managing Members</span>
    <table>
      <thead>
        <tr>
          <th>Email</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% @memberships.each do |membership| %>
          <tr>
            <td><%= membership.user.email %></td>
            <td><%= membership.role %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="players-list box">
    <div class="flex flex-row justify-between items-center mb-3">
      <span class="subsection-title">Players</span>
      <%= link_to 'Add New Player', new_group_player_path(@group), class: "btn-primary" %>
    </div>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Position</th>
          <th>Attack</th>
          <th>Defense</th>
          <th>Stamina</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @group.players.each do |player| %>
          <tr>
            <td><%= player.name %></td>
            <td>
              <%= player.positioning %>
              (<%= player.positioning <= 50 ? 'Defensive' : 'Attacking' %>)
            </td>
            <td><%= player.attack %></td>
            <td><%= player.defense %></td>
            <td><%= player.stamina %></td>
            <td>
              <%= link_to 'View', player_path(player), class: "btn-primary !py-1" %>
              <%= link_to 'Edit', edit_player_path(player), class: "btn-secondary !py-1" %>
              <%= link_to 'Delete', player_path(player), 
                data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, 
                class: "btn-danger !py-1" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>