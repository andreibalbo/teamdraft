<div id="draft-weights-modal" class="!hidden modal fixed inset-0 bg-black bg-opacity-50 items-center justify-center">
  <div class="modal-content bg-white p-6 rounded-lg shadow-lg w-full max-w-md">
    <div class="modal-header flex justify-between items-center mb-4">
      <h2 class="text-lg font-semibold">Draft Generation Weights</h2>
      <button class="modal-close text-gray-500 hover:text-gray-700">&times;</button>
    </div>
    <div class="modal-body">
      <%= form_tag generate_match_drafts_path(match), method: :post, class: "flex flex-col gap-4" do %>
        <div class="form-group">
          <label for="positioning_weight" class="block text-sm font-medium text-gray-700">Positioning Weight:</label>
          <input type="number" name="weights[positioning]" id="positioning_weight" value="1" step="0.1" min="0" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary">
        </div>
        <div class="form-group">
          <label for="attack_weight" class="block text-sm font-medium text-gray-700">Attack Weight:</label>
          <input type="number" name="weights[attack]" id="attack_weight" value="1" step="0.1" min="0" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary">
        </div>
        <div class="form-group">
          <label for="defense_weight" class="block text-sm font-medium text-gray-700">Defense Weight:</label>
          <input type="number" name="weights[defense]" id="defense_weight" value="1" step="0.1" min="0" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary">
        </div>
        <div class="form-group">
          <label for="stamina_weight" class="block text-sm font-medium text-gray-700">Stamina Weight:</label>
          <input type="number" name="weights[stamina]" id="stamina_weight" value="1" step="0.1" min="0" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary">
        </div>
        <div class="flex justify-end gap-2 mt-4">
          <button type="button" class="btn-secondary">Cancel</button>
          <%= submit_tag "Generate", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>