<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <div class="d-flex justify-content-between align-items-center">
        <h2>Matches - <%= @group.name %></h2>
        <%= link_to 'Add New Match', new_group_match_path(@group), class: "button" %>
      </div>
    </div>
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @matches.order(datetime: :desc).each do |match| %>
            <tr>
              <td><%= match.datetime.strftime("%Y-%m-%d") %></td>
              <td><%= match.datetime.strftime("%H:%M") %></td>
              <td>
                <%= link_to 'View', match_path(match), class: "button" %>
                <%= link_to 'Edit', edit_match_path(match), class: "button" %>
                <%= link_to 'Delete', match_path(match),
                    data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
                    class: "button" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="card-footer">
      <%= link_to 'Back to Group', group_path(@group), class: "button" %>
    </div>
  </div>
</div>