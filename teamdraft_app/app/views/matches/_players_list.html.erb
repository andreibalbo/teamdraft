<div class="box flex flex-col gap-6 mt-4">
  <div class="flex flex-row justify-between items-center">
    <span class="subsection-title">Participating Players (<%= @match.participations.count %>)</span>
    <%= link_to 'Select Players', players_match_path(@match), class: 'btn-primary text-center' %>
  </div>
  <% if @match.players.any? %>
    <div class="hidden lg:block max-h-96 overflow-y-auto">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Attack</th>
            <th>Defense</th>
            <th>Stamina</th>
          </tr>
        </thead>
        <tbody>
          <% @match.players.each do |player| %>
            <tr>
              <td><%= player.name %></td>
              <td>
                <%= player.positioning %>
                (<%= player.position %>)
              </td>
              <td><%= player.attack %></td>
              <td><%= player.defense %></td>
              <td><%= player.stamina %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="lg:hidden gap-2 flex flex-row flex-wrap justify-between max-h-96 overflow-y-auto" >
      <% @match.players.each do |player| %>
        <div class="box flex flex-col gap-1 !py-1 px-2 text-center overflow-x-hidden w-30">
          <div class="text-xs font-bold"><%= player.name %></div>
          <div class="text-xs text-gray-600">
            <%= player.position %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">No players added to this match yet.</p>
  <% end %>
</div>